{
  "name": "@codemieai/code",
  "version": "0.0.3",
  "description": "CodeMie - CLI wrapper for managing multiple AI coding agents",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "codemie": "./bin/codemie.js",
    "codemie-code": "./bin/codemie-code.js",
    "codemie-claude": "./bin/codemie-claude.js",
    "codemie-codex": "./bin/codemie-codex.js"
  },
  "files": [
    "dist",
    "bin",
    "src/workflows/templates/**/*.yml",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint 'src/**/*.ts' --max-warnings=10",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "license-check": "npx license-checker --summary --onlyAllow 'MIT;Apache-2.0;ISC;BSD-2-Clause;BSD-3-Clause;0BSD;CC0-1.0;Unlicense;BlueOak-1.0.0;Python-2.0;CC-BY-4.0;Apache*;(MIT OR CC0-1.0)'",
    "ci": "npm run license-check && npm run lint && npm run build",
    "prepublishOnly": "npm run build",
    "prepack": "npm run build"
  },
  "keywords": [
    "ai",
    "coding",
    "cli",
    "claude",
    "codex",
    "wrapper"
  ],
  "author": "CodeMie Team",
  "license": "Apache-2.0",
  "dependencies": {
    "@clack/core": "^0.5.0",
    "@clack/prompts": "^0.11.0",
    "@langchain/core": "^1.0.4",
    "@langchain/langgraph": "^1.0.2",
    "@langchain/openai": "^1.1.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "inquirer": "^9.2.12",
    "keytar": "^7.9.0",
    "open": "^8.4.2",
    "ora": "^7.0.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=24.0.0"
  }
}
